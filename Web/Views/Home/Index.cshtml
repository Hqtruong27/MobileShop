                                    <ul>
                                        <li class="title">
                                            <a href="@Url.Action("Providers","Home", new {id = provider.ProviderId })">@provider.ProviderName</a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="archive-product-fluid">
                                    @foreach (var product in provider.Products.Take(4))
                                    {
                                    <ul>
                                        <div class="item">
                                            <div class="responsive-1">
                                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6 one-product">
                                                    <div class="item-product">
                                                        <div class="content-product-fluid">
                                                            <li>
