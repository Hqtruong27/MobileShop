                                        }


                                    </div>
                                </ul> <!-- CLASS CSS ARCHIEVE--->
                                <!-- end full_home_sanpham -->
                                <div class="clear"></div>

                                <!-- <div class="mar-clear">&nbsp;</div>-->
                            </div> <!-- END CSS ARCHIEVE PRODUCT-->
                    </aside>
                    @*<aside class="shop-homepage">
                        <a href='#' alt='Ad'>
                            <img class='img-ads-widget' style='width: 100%;'
                                 src='~/Content/wp-content/plugins/ad-widget/images/wp6/banner-3.jpg' alt='Ad' />
                        </a>
                    </aside>*@
                </div>
            </div>

            @{ Html.RenderAction("Mainleft", "Home");}

        </div>
        <!--END MAIN CONTAINER -->
    </section>
</div>