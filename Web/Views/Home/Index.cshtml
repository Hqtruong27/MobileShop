                                                                <a style="border:none; box-shadow:none" href="@Url.Action("Productsdetail","Home", new { id = product.ProductId})" title="@product.ProductName">
                                                                    <img src="@product.FeatureImage" alt="@product.ProductName" width="300" height="300" class="img-rounded" />
                                                                </a>
                                                                <!-- END GET IMAGE -->
                                                                <div class="content-product-title">
                                                                    <a class="woo-title" href="san-pham/may-hut-mui-canzy-cz-3388-7090/index.html" title="@product.ProductName">@product.ProductName</a>
                                                                </div>
                                                                <div class="content-product-sku">
                                                                    <lable></lable>
                                                                </div>
                                                                <div class="post-price">
                                                                    <div class="salepercent">

                                                                    </div>
                                                                    <div class="price">
                                                                        <span class="woocommerce-Price-amount amount">
                                                                            @{
                                                                                var vie = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
                                                                                var price = product.Discount > 0 ? product.PriceOut - product.PriceOut * product.Discount / 100 : product.PriceOut;
                                                                            }
                                                                            @String.Format(vie, "{0:c00}", price)
                                                                        </span>
                                                                    </div>
                                                                </div>
                                                                <div class="box add-to-cart-btn">
                                                                    <a href="san-pham/may-hut-mui-canzy-cz-3388-7090/index.html"
                                                                       title="MÁY HÚT MÙI CANZY CZ-3388-70/90">
                                                                        <div class="overbox">
                                                                            <div class="title overtext"> XEM CHI TIẾT</div>
                                                                        </div>
                                                                    </a>
                                                                </div>
                                                            </li>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--CSS DISPLAY RESPONSIVE -->
                                            </div> <!-- END one-product -->
                                        </div>
                                    </ul>
                                    }
                                    <div class="clear"></div>

                                    <!-- <div class="mar-clear">&nbsp;</div>-->
                                </div>


                            </div>
                        </aside>

                    }
